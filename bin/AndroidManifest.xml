            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCYU3Gd1ZrpKfpBdNQswbglMZjPJnaY3mc" />

        <activity
            android:name=".Pokedex_activity"
            android:label="@string/title_activity_pokedex_activity" >
